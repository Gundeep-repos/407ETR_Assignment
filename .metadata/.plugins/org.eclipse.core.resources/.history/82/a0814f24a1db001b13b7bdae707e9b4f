    // xhr.setRequestHeader('Access-Control-Allow-Credentials', 'true');

    //for response receiving
    xhr.onreadystatechange = function ()
    {
    	
    	if(xhr.readyState == 4 && xhr.status == 200){
    		alert("Hello")
